---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { ArrowLeft, Calendar, Clock } from 'lucide-react';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout
  title={`${post.data.title} | TopGun Blog`}
  description={post.data.excerpt}
  type="article"
  author={post.data.author}
>
  <div class="pt-24 pb-20 px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto min-h-screen">
    <a
      href="/blog"
      class="group flex items-center gap-2 text-sm text-neutral-500 hover:text-foreground transition-colors mb-8"
    >
      <ArrowLeft className="w-4 h-4 group-hover:-translate-x-1 transition-transform" />
      Back to Blog
    </a>

    <div class="mb-8">
      <div class="flex items-center gap-3 mb-6">
        <span class="px-3 py-1 text-xs font-medium rounded-full bg-blue-500/10 text-blue-600 dark:text-blue-400 border border-blue-500/20">
          {post.data.category}
        </span>
        <span class="flex items-center gap-1 text-xs text-neutral-500">
          <Calendar className="w-3 h-3" /> {post.data.date}
        </span>
        <span class="flex items-center gap-1 text-xs text-neutral-500">
          <Clock className="w-3 h-3" /> {post.data.readTime}
        </span>
      </div>

      <h1 class="text-3xl md:text-5xl font-bold text-foreground leading-tight mb-8">
        {post.data.title}
      </h1>

      {post.data.image && (
        <img
          src={post.data.image}
          alt={post.data.title}
          class="w-full h-64 md:h-80 object-cover rounded-xl mb-8"
        />
      )}

      <div class="border-b border-card-border pb-8 mb-8">
        <span class="text-sm text-neutral-500">Written by </span>
        <span class="text-sm font-medium text-foreground">{post.data.author}</span>
      </div>
    </div>

    <article class="prose prose-neutral dark:prose-invert max-w-none text-lg text-neutral-600 dark:text-neutral-300 leading-relaxed">
      <Content />
    </article>

  </div>
</Layout>
