---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { User, ChevronRight } from 'lucide-react';

const posts = await getCollection('blog');
// Sort by date (newest first)
posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout title="Blog | TopGun">
  <div class="pt-24 pb-20 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto min-h-screen">
    <div class="text-center mb-16 max-w-3xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold text-foreground mb-6">Blog</h1>
      <p class="text-xl text-neutral-600 dark:text-neutral-300">
        Latest news, technical deep dives, and tutorials from the TopGun team.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map((post) => (
        <a
          href={`/blog/${post.slug}`}
          class="group flex flex-col h-full rounded-2xl border border-card-border bg-card overflow-hidden hover:border-neutral-300 dark:hover:border-white/20 transition-all hover:shadow-lg"
        >
          {post.data.image && (
            <img
              src={post.data.image}
              alt={post.data.title}
              class="h-48 w-full object-cover"
            />
          )}
          <div class="flex-1 p-6 flex flex-col">
            <div class="flex items-center justify-between mb-4">
              <span class="text-xs font-medium text-blue-600 dark:text-blue-400">
                {post.data.category}
              </span>
              <span class="text-xs text-neutral-500">
                {post.data.date}
              </span>
            </div>

            <h3 class="text-xl font-bold text-foreground mb-3 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
              {post.data.title}
            </h3>

            <p class="text-neutral-600 dark:text-neutral-300 text-sm leading-relaxed mb-6 flex-1">
              {post.data.excerpt}
            </p>

            <div class="flex items-center justify-between pt-6 border-t border-card-border mt-auto">
              <div class="flex items-center gap-2">
                <div class="w-6 h-6 rounded-full bg-neutral-200 dark:bg-neutral-800 flex items-center justify-center">
                  <User className="w-3 h-3 text-neutral-500" />
                </div>
                <span class="text-xs text-neutral-500 font-medium">{post.data.author}</span>
              </div>
              <span class="flex items-center gap-1 text-xs font-semibold text-foreground group-hover:translate-x-1 transition-transform">
                Read more <ChevronRight className="w-3 h-3" />
              </span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>
