{
    "name": "topgun",
    "version": "0.0.1",
    "description": "Realtime, offline-first, secure, graph data synchronization engine. Reimplementation of gunDB in TypeScript",
    "scripts": {
        "buildall": "npm run clean && npm run ts-types && concurrently \"npm:build:*\"",
        "build:client": "node build-scripts/client.esbuild.js",
        "build:server": "node build-scripts/server.esbuild.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "test:unit": "jest --coverage",
        "clean": "rimraf dist",
        "ts-types": "tsc -p tsconfig.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TopGunBuild/topgun.git"
    },
    "keywords": [
        "graph",
        "realtime",
        "database",
        "typescript",
        "javascript",
        "gun",
        "key-value store",
        "storage",
        "adapter",
        "performance"
    ],
    "author": "Ivan Kalashnik",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/TopGunBuild/topgun/issues"
    },
    "homepage": "https://github.com/TopGunBuild/topgun#readme",
    "dependencies": {
        "ajv": "^8.12.0",
        "isomorphic-webcrypto": "^2.3.8",
        "route-parser": "^0.0.5",
        "topgun-socket": "0.0.5",
        "window-or-global": "^1.0.1"
    },
    "devDependencies": {
        "@types/jest": "^29.4.0",
        "@types/route-parser": "^0.1.4",
        "@types/window-or-global": "^1.0.4",
        "concurrently": "^7.5.0",
        "esbuild": "^0.15.14",
        "esbuild-node-externals": "^1.5.0",
        "jest": "^29.4.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^29.0.5",
        "tslint": "^6.1.3",
        "typescript": "^4.8.4"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testEnvironment": "node",
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 95,
                "lines": 95,
                "statements": 95
            }
        },
        "collectCoverageFrom": [
            "src/*.{js,ts}"
        ]
    }
}
