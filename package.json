{
    "name": "@topgunbuild/topgun",
    "version": "0.0.6",
    "description": "Realtime, offline-first, secure, graph data synchronization engine. Reimplementation of gunDB in TypeScript",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsup",
        "build:dev": "tsup --watch",
        "build:package": "node ./tools/prepare-package.js",
        "prepublishOnly": "pnpm run build",
        "test": "jest",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "prepare": "simple-git-hooks",
        "release": "dotenv release-it --",
        "tarball": "rimraf tar && pnpm pack --pack-destination ./tar"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.mjs",
            "default": "./dist/index.js"
        },
        "./client": {
            "types": "./dist/client.d.ts",
            "require": "./dist/client.js",
            "import": "./dist/client.mjs",
            "default": "./dist/client.mjs"
        },
        "./crdt": {
            "types": "./dist/crdt.d.ts",
            "require": "./dist/crdt.js",
            "import": "./dist/crdt.mjs",
            "default": "./dist/crdt.mjs"
        },
        "./federation-adapter": {
            "types": "./dist/federation-adapter.d.ts",
            "require": "./dist/federation-adapter.js",
            "import": "./dist/federation-adapter.mjs",
            "default": "./dist/federation-adapter.mjs"
        },
        "./indexeddb": {
            "types": "./dist/indexeddb.d.ts",
            "require": "./dist/indexeddb.js",
            "import": "./dist/indexeddb.mjs",
            "default": "./dist/indexeddb.mjs"
        },
        "./logger": {
            "types": "./dist/logger.d.ts",
            "require": "./dist/logger.js",
            "import": "./dist/logger.mjs",
            "default": "./dist/logger.mjs"
        },
        "./memory-adapter": {
            "types": "./dist/memory-adapter.d.ts",
            "require": "./dist/memory-adapter.js",
            "import": "./dist/memory-adapter.mjs",
            "default": "./dist/memory-adapter.mjs"
        },
        "./sea": {
            "types": "./dist/sea.d.ts",
            "require": "./dist/sea.js",
            "import": "./dist/sea.mjs",
            "default": "./dist/sea.mjs"
        },
        "./server": {
            "types": "./dist/server.d.ts",
            "require": "./dist/server.js",
            "import": "./dist/server.mjs",
            "default": "./dist/server.mjs"
        },
        "./storage": {
            "types": "./dist/storage.d.ts",
            "require": "./dist/storage.js",
            "import": "./dist/storage.mjs",
            "default": "./dist/storage.mjs"
        },
        "./stream": {
            "types": "./dist/stream.d.ts",
            "require": "./dist/stream.js",
            "import": "./dist/stream.mjs",
            "default": "./dist/stream.mjs"
        },
        "./types": {
            "types": "./dist/types.d.ts",
            "require": "./dist/types.js",
            "import": "./dist/types.mjs",
            "default": "./dist/types.mjs"
        },
        "./utils": {
            "types": "./dist/utils.d.ts",
            "require": "./dist/utils.js",
            "import": "./dist/utils.mjs",
            "default": "./dist/utils.mjs"
        },
        "./validator": {
            "types": "./dist/validator.d.ts",
            "require": "./dist/validator.js",
            "import": "./dist/validator.mjs",
            "default": "./dist/validator.mjs"
        }
    },
    "files": [
        "dist/**",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TopGunBuild/topgun.git"
    },
    "keywords": [
        "graph",
        "realtime",
        "database",
        "typescript",
        "javascript",
        "gun",
        "key-value store",
        "storage",
        "adapter",
        "performance"
    ],
    "author": "Ivan Kalashnik <ivan@topgun.build>",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/TopGunBuild/topgun/issues"
    },
    "homepage": "https://github.com/TopGunBuild/topgun#readme",
    "dependencies": {
        "@topgunbuild/async-stream-emitter": "^0.0.1",
        "@topgunbuild/buffer": "^0.0.1",
        "@topgunbuild/socket": "^0.0.5",
        "@topgunbuild/textencoder": "^0.0.1",
        "@topgunbuild/typed": "^0.1.0",
        "@topgunbuild/webcrypto": "^0.0.1"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "^18.15.11",
        "@types/route-parser": "^0.1.4",
        "@typescript-eslint/eslint-plugin": "^5.58.0",
        "@typescript-eslint/parser": "^5.58.0",
        "dotenv-cli": "^7.3.0",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-import": "^2.27.5",
        "jest": "^29.5.0",
        "lint-staged": "^13.2.1",
        "prettier": "^2.8.7",
        "release-it": "^16.1.5",
        "rimraf": "^5.0.1",
        "simple-git-hooks": "^2.8.1",
        "ts-jest": "^29.1.0",
        "tsup": "6.5.0",
        "typescript": "4.9.4"
    },
    "lint-staged": {
        "**/*.{ts}": [
            "eslint \"src/**/*.ts\" --fix"
        ]
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    }
}
