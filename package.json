{
    "name": "@topgunbuild/topgun",
    "version": "0.0.2",
    "description": "Realtime, offline-first, secure, graph data synchronization engine. Reimplementation of gunDB in TypeScript",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "tsup",
        "build:dev": "tsup --watch",
        "build:package": "node ./tools/prepare-package.js",
        "prepublishOnly": "pnpm run build",
        "test": "jest",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "prepare": "simple-git-hooks",
        "release": "dotenv release-it --",
        "tarball": "rimraf tar && pnpm pack --pack-destination ./tar"
    },
    "browser": "./dist/client.global.js",
    "exports": {
        "./client": {
            "types": "./dist/client.d.ts",
            "require": "./dist/client.js",
            "import": "./dist/client.mjs"
        },
        "./crdt": {
            "types": "./dist/crdt.d.ts",
            "require": "./dist/crdt.js",
            "import": "./dist/crdt.mjs"
        },
        "./server": {
            "types": "./dist/server.d.ts",
            "require": "./dist/server.js",
            "import": "./dist/server.mjs"
        },
        "./storage": {
            "types": "./dist/storage.d.ts",
            "require": "./dist/storage.js",
            "import": "./dist/storage.mjs"
        },
        "./stream": {
            "types": "./dist/stream.d.ts",
            "require": "./dist/stream.js",
            "import": "./dist/stream.mjs"
        },
        "./sea": {
            "types": "./dist/sea.d.ts",
            "require": "./dist/sea.js",
            "import": "./dist/sea.mjs"
        },
        "./utils": {
            "types": "./dist/utils.d.ts",
            "require": "./dist/utils.js",
            "import": "./dist/utils.mjs"
        },
        "./logger": {
            "types": "./dist/logger.d.ts",
            "require": "./dist/logger.js",
            "import": "./dist/logger.mjs"
        },
        "./types": {
            "types": "./dist/types.d.ts",
            "require": "./dist/types.js",
            "import": "./dist/types.mjs"
        },
        "./package.json": "./package.json"
    },
    "typesVersions": {
        "*": {
            "client": [
                "./dist/client.d.ts"
            ],
            "crdt": [
                "./dist/crdt.d.ts"
            ],
            "server": [
                "./dist/server.d.ts"
            ],
            "storage": [
                "./dist/storage.d.ts"
            ],
            "stream": [
                "./dist/stream.d.ts"
            ],
            "sea": [
                "./dist/sea.d.ts"
            ],
            "utils": [
                "./dist/utils.d.ts"
            ],
            "logger": [
                "./dist/logger.d.ts"
            ],
            "types": [
                "./dist/utils.d.ts"
            ]
        }
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TopGunBuild/topgun.git"
    },
    "keywords": [
        "graph",
        "realtime",
        "database",
        "typescript",
        "javascript",
        "gun",
        "key-value store",
        "storage",
        "adapter",
        "performance"
    ],
    "author": "ivan@topgun.build",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/TopGunBuild/topgun/issues"
    },
    "homepage": "https://github.com/TopGunBuild/topgun#readme",
    "dependencies": {
        "@topgunbuild/async-stream-emitter": "^0.0.1",
        "@topgunbuild/buffer": "^0.0.1",
        "@topgunbuild/socket": "^0.0.5",
        "@topgunbuild/textencoder": "^0.0.1",
        "@topgunbuild/typed": "^0.1.0",
        "@topgunbuild/webcrypto": "^0.0.1"
    },
    "devDependencies": {
        "@types/jest": "^29.5.0",
        "@types/node": "^18.15.11",
        "@types/route-parser": "^0.1.4",
        "@typescript-eslint/eslint-plugin": "^5.58.0",
        "@typescript-eslint/parser": "^5.58.0",
        "dotenv-cli": "^7.3.0",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-import": "^2.27.5",
        "jest": "^29.5.0",
        "lint-staged": "^13.2.1",
        "prettier": "^2.8.7",
        "release-it": "^16.1.5",
        "rimraf": "^5.0.1",
        "simple-git-hooks": "^2.8.1",
        "ts-jest": "^29.1.0",
        "tsup": "6.5.0",
        "typescript": "4.9.4"
    },
    "lint-staged": {
        "**/*.{ts}": [
            "eslint \"src/**/*.ts\" --fix"
        ]
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged"
    }
}
