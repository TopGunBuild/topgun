{
  "name": "@topgunbuild/mcp-server",
  "version": "0.11.0",
  "description": "MCP Server for TopGun - enables AI assistants to interact with TopGun databases",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "topgun-mcp": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "start": "node dist/cli.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@topgunbuild/client": "workspace:*",
    "@topgunbuild/core": "workspace:*",
    "pino": "^10.1.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "pino-pretty": "^13.1.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "BSL-1.1",
  "keywords": [
    "topgun",
    "mcp",
    "model-context-protocol",
    "claude",
    "cursor",
    "ai",
    "database"
  ]
}
