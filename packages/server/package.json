{
  "name": "@topgunbuild/server",
  "version": "0.10.1",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:workers": "pnpm build && jest --testPathPattern=workers",
    "test:integration": "jest --config jest.integration.config.js --runInBand",
    "test:integration:distributed": "jest --config jest.integration.config.js --testPathPattern=distributed-subscriptions --runInBand"
  },
  "dependencies": {
    "@topgunbuild/core": "workspace:*",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/ws": "^8.18.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.0",
    "pino": "^10.1.0",
    "prom-client": "^15.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/pg": "^8.6.6",
    "pino-pretty": "^13.1.2",
    "typescript": "^5.0.0"
  },
  "optionalDependencies": {
    "@topgunbuild/native": "workspace:*",
    "better-sqlite3": "^11.7.0",
    "isolated-vm": "^4.7.2"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "BSL-1.1"
}
