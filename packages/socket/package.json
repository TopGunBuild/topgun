{
    "name": "@topgunbuild/socket",
    "version": "0.0.0",
    "description": "Scalable realtime pub/sub and RPC framework",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist/**"
    ],
    "sideEffects": false,
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./client": {
            "types": "./dist/client.d.ts",
            "import": "./dist/client.js"
        },
        "./server": {
            "types": "./dist/server.d.ts",
            "import": "./dist/server.js"
        }
    },
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "lint": "eslint src/",
        "typecheck": "tsc --noEmit",
        "test": "jest"
    },
    "keywords": [
        "websocket",
        "realtime",
        "client",
        "server",
        "serverless",
        "topgun"
    ],
    "author": "",
    "license": "ISC",
    "jest": {
        "preset": "@topgunbuild/jest-presets/node"
    },
    "dependencies": {
        "@topgunbuild/async-stream-emitter": "workspace:*",
        "@topgunbuild/utils": "workspace:*",
        "ws": "^8.9.0"
    },
    "devDependencies": {
        "@topgunbuild/eslint-config": "workspace:*",
        "@topgunbuild/jest-presets": "workspace:*",
        "@topgunbuild/typescript-config": "workspace:*",
        "@topgunbuild/test-utils": "workspace:*",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.24",
        "jest": "^29.7.0",
        "tsup": "^8.0.2",
        "typescript": "^5.3.3"
    }
}
